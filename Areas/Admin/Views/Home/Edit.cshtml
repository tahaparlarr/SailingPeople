@model SailingPeople.Models.BoatEditViewModel

@{
    ViewData["Title"] = "Edit Boat";

    var allFacilities = ViewBag.AllFacilities as List<SailingPeople.Domain.Facility>;
    var allSpecs = ViewBag.AllSpecs as List<SailingPeople.Domain.Spec>;
}

<div class="container my-4">
    <h2 class="mb-4">Edit Boat</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Sol Kolon: Boat Info, Pricing, Facilities, Specs -->
            <div class="col-md-8">
                <!-- Boat Info Card -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        Boat Info
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">Select...</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Code" class="form-label">Code</label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Width" class="form-label">Width (m)</label>
                                <input asp-for="Width" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Length" class="form-label">Length (m)</label>
                                <input asp-for="Length" class="form-control" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Guest" class="form-label">Guest</label>
                                <input asp-for="Guest" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Cabin" class="form-label">Cabin</label>
                                <input asp-for="Cabin" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pricing Card -->
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        Pricing
                    </div>
                    <div class="card-body">
                        <div class="row g-3 mb-3">
                            <div class="col-md-6 col-lg-3">
                                <label asp-for="MayToOctoberPrice" class="form-label">May-Oct Price</label>
                                <input asp-for="MayToOctoberPrice" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <label asp-for="JunePrice" class="form-label">June Price</label>
                                <input asp-for="JunePrice" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <label asp-for="JulyToAugustPrice" class="form-label">July-Aug Price</label>
                                <input asp-for="JulyToAugustPrice" class="form-control" />
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <label asp-for="SeptemberPrice" class="form-label">September Price</label>
                                <input asp-for="SeptemberPrice" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Facilities Card -->
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        Facilities
                    </div>
                    <div class="card-body">
                        @if (allFacilities != null)
                        {
                            foreach (var facility in allFacilities)
                            {
                                var isChecked = Model.SelectedFacilities.Contains(facility.Id);
                                <div class="form-check form-check-inline mb-2">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedFacilities"
                                           value="@facility.Id"
                                           @(isChecked ? "checked" : "") />
                                    <label class="form-check-label">
                                        @facility.LocalizedName
                                    </label>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Specs Card -->
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        Specs
                    </div>
                    <div class="card-body">
                        @if (Model.Specs != null && allSpecs != null)
                        {
                            for (int i = 0; i < Model.Specs.Count; i++)
                            {
                                var specId = Model.Specs[i].SpecId;
                                var specName = allSpecs
                                    .FirstOrDefault(s => s.Id == specId)?.LocalizedName ?? "Unknown Spec";

                                <div class="row mb-2">
                                    <div class="col-md-4 fw-bold">
                                        @specName
                                    </div>
                                    <div class="col-md-8">
                                        <input type="hidden" name="Specs[@i].SpecId" value="@specId" />
                                        <input type="text"
                                               name="Specs[@i].ValueTr"
                                               value="@Model.Specs[i].ValueTr"
                                               class="form-control" />
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Sağ Kolon: Cover Image, Existing Images, Additional Images -->
            <div class="col-md-4">
                <!-- Main Cover Image Card -->
                <div class="card mb-3">
                    <div class="card-header bg-dark text-white">
                        Cover Image
                    </div>
                    <div class="card-body">
                        <!-- Mevcut cover resmi göstermek isterseniz: 
                             <img src="data:image/webp;base64,@Model.CoverImage" class="img-fluid mb-3" /> -->
                        <label asp-for="ImageFile" class="form-label fw-bold">Change / Upload Main Image</label>
                        <input asp-for="ImageFile" class="form-control" type="file" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <!-- Existing Additional Images -->
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        Existing Images
                    </div>
                    <div class="card-body">
                        @if (Model.ExistingImages != null && Model.ExistingImages.Count > 0)
                        {
                            <div class="row">
                                @for (int i = 0; i < Model.ExistingImages.Count; i++)
                                {
                                    var img = Model.ExistingImages[i];
                                    <div class="col-6 col-lg-6 mb-3">
                                        <div class="card">
                                            <img src="data:image/webp;base64,@img.Base64Data" class="card-img-top" />
                                            <div class="card-body p-2">
                                                <input type="hidden" name="ExistingImages[@i].Id" value="@img.Id" />
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="ExistingImages[@i].Remove"
                                                           value="true" />
                                                    <label class="form-check-label small">
                                                        Remove this image
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">No additional images found.</div>
                        }
                    </div>
                </div>

                <!-- Add More Images -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        Add More Images
                    </div>
                    <div class="card-body">
                        <label asp-for="AdditionalImages" class="form-label">Select Files</label>
                        <input asp-for="AdditionalImages" class="form-control" type="file" multiple />
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="row mt-4">
            <div class="col text-end">
                <button type="submit" class="btn btn-primary px-5">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
