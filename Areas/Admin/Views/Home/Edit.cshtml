@model BoatDto

@{
    ViewData["Title"] = "Edit Boat";
}

<div class="container-fluid py-5" style="background: linear-gradient(to bottom, #dfe9f3, #ffffff);">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Boat</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                <option value="">Select...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Boat Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold"></label>
                            <input asp-for="Code" class="form-control" placeholder="Boat Code" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MayToOctoberPrice" class="form-label fw-bold"></label>
                            <input asp-for="MayToOctoberPrice" class="form-control" placeholder="Boat May To October Price" />
                            <span asp-validation-for="MayToOctoberPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JunePrice" class="form-label fw-bold"></label>
                            <input asp-for="JunePrice" class="form-control" placeholder="Boat June Price" />
                            <span asp-validation-for="JunePrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JulyToAugustPrice" class="form-label fw-bold"></label>
                            <input asp-for="JulyToAugustPrice" class="form-control" placeholder="Boat July To August Price" />
                            <span asp-validation-for="JulyToAugustPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SeptemberPrice" class="form-label fw-bold"></label>
                            <input asp-for="SeptemberPrice" class="form-control" placeholder="Boat September Price" />
                            <span asp-validation-for="SeptemberPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Width" class="form-label fw-bold"></label>
                            <input asp-for="Width" class="form-control" placeholder="Width (meters)" />
                            <span asp-validation-for="Width" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Length" class="form-label fw-bold"></label>
                            <input asp-for="Length" class="form-control" placeholder="Length (meters)" />
                            <span asp-validation-for="Length" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Guest" class="form-label fw-bold"></label>
                            <input asp-for="Guest" class="form-control" placeholder="Number of Guests" />
                            <span asp-validation-for="Guest" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cabin" class="form-label fw-bold"></label>
                            <input asp-for="Cabin" class="form-control" placeholder="Number of Cabins" />
                            <span asp-validation-for="Cabin" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Current Main Image</label>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <div>
                                    <img src="data:image/webp;base64,@Model.Image" class="img-thumbnail" style="max-height: 200px;" />
                                </div>
                            }
                            <label asp-for="ImageFile" class="form-label fw-bold mt-2">Change Main Image</label>
                            <input asp-for="ImageFile" class="form-control" type="file" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Current Additional Images</label>
                            <div class="row">
                                @foreach (var image in Model.BoatImages)
                                {
                                    <div class="col-md-3 mb-3">
                                        <img src="data:image/webp;base64,@image.Image" class="img-thumbnail" />
                                        <a asp-action="DeleteImage" asp-route-id="@image.Id" class="btn btn-sm btn-danger mt-2">Delete</a>
                                    </div>
                                }
                            </div>
                            <label asp-for="Images" class="form-label fw-bold">Add More Images</label>
                            <input asp-for="Images" class="form-control" type="file" multiple />
                            <span asp-validation-for="Images" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <h5 class="fw-bold">Specifications</h5>
                            </div>
                            @foreach (var spec in ViewBag.Specs as IEnumerable<Spec>)
                            {
                                var boatSpec = Model.BoatSpecs.FirstOrDefault(bs => bs.SpecId == spec.Id);
                                <div class="col-md-3 mb-3">
                                    <label class="form-label">@spec.LocalizedName</label>
                                    <input type="hidden" name="SpecId" value="@spec.Id" />
                                    <input type="text" name="SpecValue" class="form-control"
                                           value="@(boatSpec?.ValueTr ?? "")" />
                                </div>
                            }
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <h5 class="fw-bold">Facilities</h5>
                            </div>
                            @foreach (var facility in ViewBag.Facility as IEnumerable<Facility>)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="form-check">
                                        <input type="checkbox" name="FacilityId" value="@facility.Id"
                                               class="form-check-input"
                                               @(Model.Facilities.Any(f => f.Id == facility.Id) ? "checked" : "") />
                                        <label class="form-check-label">@facility.LocalizedName</label>
                                    </div>
                                </div>
                            }
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary fw-bold">
                                Update Boat
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>