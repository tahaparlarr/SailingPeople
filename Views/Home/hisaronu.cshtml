@{
    ViewData["Title"] = "Bodrum Aegean Routes";
}

<section class="hero-section position-relative d-flex align-items-center justify-content-center text-white">
    <div class="hero-overlay"></div>
    <div class="container py-5">
        <div class="row align-items-center">

            <div class="col-12 col-md-6 text-center text-md-start mb-4 mb-md-0">
                <h1 class="display-4 fw-bold mb-3">Bodrum Aegean Routes</h1>
                <p class="lead mb-4">
                    Start your unforgettable journey through the hidden bays of the Aegean, departing from Bodrum.
                </p>
                <button type="button" class="btn btn-inspect rounded-0" data-bs-toggle="modal"
                    data-bs-target="#videoModal">
                    Watch
                </button>
            </div>

            <div class="col-12 col-md-6 text-center">
                <img src="~/images/hisaronu.gif" alt="Bodrum Route GIF" class="img-fluid hero-gif shadow-lg" />
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title text-white" id="videoModalLabel">Discover the Adventure</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body p-0 ratio ratio-16x9">
                <video controls>
                    <source src="~/video/bodrum_routes.m4v" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</div>

<section class="itinerary-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Weekly Schedule</h2>
            <p class="text-muted">
                Explore the weekly itinerary of your journey from Bodrum, discovering the most beautiful Aegean bays.
            </p>
        </div>

        <div class="accordion" id="weekAccordion">

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSaturday">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseSaturday" aria-expanded="true" aria-controls="collapseSaturday">
                        <strong>Saturday</strong>
                    </button>
                </h2>
                <div id="collapseSaturday" class="accordion-collapse collapse show" aria-labelledby="headingSaturday"
                    data-bs-parent="#weekAccordion">
                    <div class="accordion-body">
                        <p class="mb-2">
                            <strong>10:00</strong> Meeting at Turgut Village. Boat introduction, orientation, provisions
                            loading, voyage planning.
                        </p>
                        <p class="mb-2">
                            <strong>12:00</strong> Departure from the marina, sailing for an average of 2 hours.
                        </p>
                        <p class="mb-2">
                            <strong>16:00</strong> Arrival at Kuz Bükü, swimming and dinner (Neighbors Restaurant).
                        </p>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSunday">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseSunday" aria-expanded="false" aria-controls="collapseSunday">
                        <strong>Sunday</strong>
                    </button>
                </h2>
                <div id="collapseSunday" class="accordion-collapse collapse" aria-labelledby="headingSunday"
                    data-bs-parent="#weekAccordion">
                    <div class="accordion-body">
                        <p class="mb-2"><strong>07:00</strong> Morning yoga, swimming, and breakfast on the boat.</p>
                        <p class="mb-2"><strong>11:00</strong> Departure from Kuzbükü, sailing to the destination bay.
                        </p>
                        <p class="mb-2">Swimming break and lunch in Alarga.</p>
                        <p class="mb-2"><strong>16:00</strong> Arrival in Dirsek Bükü, accommodation in Alarga and
                            dinner on board.</p>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingMonday">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseMonday" aria-expanded="false" aria-controls="collapseMonday">
                        <strong>Monday</strong>
                    </button>
                </h2>
                <div id="collapseMonday" class="accordion-collapse collapse" aria-labelledby="headingMonday"
                    data-bs-parent="#weekAccordion">
                    <div class="accordion-body">
                        <p class="mb-2"><strong>07:00</strong> Morning yoga, swimming, and breakfast on the boat.</p>
                        <p class="mb-2"><strong>13:00</strong> Departure from Dirsek Bükü, sailing to the destination
                            bay, alarga and lunch on the boat.</p>
                        <p class="mb-2"><strong>17:00</strong> Arrival at Bozburun Yacht Club, dinner at the club.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
