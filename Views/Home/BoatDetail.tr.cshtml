@model BoatDto

@{
    ViewData["Title"] = "Boat Detail";
}

<div class="container my-5">
    <div class="mb-4 text-center">
        <h1 class="display-5">@Model.Name - Tekne Detayları</h1>
        <p class="text-muted">Kod: @Model.Code</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <section id="image-carousel" class="splide" aria-label="Boat Images">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide">
                            <img src="@Model.Image" alt="Cover Image" class="img-fluid" />
                        </li>

                        @foreach (var image in Model.BoatImages)
                        {
                            <li class="splide__slide">
                                <img src="@image.Image" alt="Boat Image" class="img-fluid" />
                            </li>
                        }
                    </ul>
                </div>
            </section>
        </div>

        <div class="col-md-4">
            <div class="card border-0">
                <div class="card-body">
                    <h3 class="card-title mb-3">@Model.Name</h3>
                    <hr />

                    <div class="mb-4">
                        <h5 class="mb-2">Tekne Özellikleri</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>En (Metre):</strong> @Model.Width
                            </li>
                            <li class="list-group-item">
                                <strong>Boy (Metre):</strong> @Model.Length
                            </li>
                            <li class="list-group-item">
                                <strong>Kabin Sayısı:</strong> @Model.Cabin
                            </li>
                            <li class="list-group-item">
                                <strong>Misafir Kapasitesi:</strong> @Model.Guest
                            </li>

                            @*@foreach (var spec in Model.Specifications)
                            {
                                <li class="list-group-item">
                                    <strong>@spec.Name:</strong> @spec.Value
                                </li>
                            }*@
                        </ul>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-2">Fiyat Bilgileri</h5>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Dönem</th>
                                    <th>Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Mayıs - Ekim</td>
                                    <td>@Model.MayToOctoberPrice €</td>
                                </tr>
                                <tr>
                                    <td>Haziran</td>
                                    <td>@Model.JunePrice €</td>
                                </tr>
                                <tr>
                                    <td>Temmuz - Ağustos</td>
                                    <td>@Model.JulyToAugustPrice €</td>
                                </tr>
                                <tr>
                                    <td>Eylül</td>
                                    <td>@Model.SeptemberPrice €</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                     @*Display Facilities 
                    <div class="mb-4">
                        <h5 class="mb-2">Tekne Donanımları</h5>
                        <ul class="list-group">
                            @foreach (var facility in Model.Facilities)
                            {
                                <li class="list-group-item">
                                    @facility.Name
                                </li>
                            }
                        </ul>
                    </div>*@

                    <div class="d-flex gap-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            Anasayfa'ya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_SplideScriptsPartial" />
