@model BoatDto

@{
    ViewData["Title"] = "Tekne Detayları - " + Model.Code;
}

<section class="hero-new-design d-flex align-items-center text-white" style="background-image: url('@Model.Image')">
    <div class="overlay"></div>
    <div class="container text-center">
        <h1 class="display-4">@Model.Code</h1>
        <p class="lead mb-4">
            Rüya gibi bir mavi yolculuğa <strong>@Model.Code</strong> ile çıkmaya hazır mısınız?
        </p>
        <a href="#details-section" class="btn btn-primary">Detayları Gör</a>
    </div>
</section>

<div class="container py-4" id="details-section">
    <div class="row justify-content-center">
        <div class="col-lg-8 mb-4">
            <div id="primary-slider" class="splide mb-3" aria-label="Ana Tekne Görselleri">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide">
                            <img src="@Model.Image" class="img-fluid mx-auto d-block" alt="Kapak Görseli" />
                        </li>
                        @foreach (var image in Model.BoatImages)
                        {
                            <li class="splide__slide">
                                <img src="@image.Image" class="img-fluid mx-auto d-block" alt="Tekne Görseli" />
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="boat-specs-all">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Genel Özellikler</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Genişlik (Metre):</strong> @Model.Width</li>
                            <li><strong>Uzunluk (Metre):</strong> @Model.Length</li>
                            <li><strong>Kabin Sayısı:</strong> @Model.Cabin</li>
                            <li><strong>Misafir Kapasitesi:</strong> @Model.Guest</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Teknik Özellikler</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            @foreach (var spec in Model.BoatSpecs)
                            {
                                if (!string.IsNullOrWhiteSpace(spec.LocalizedValue))
                                {
                                    <li>
                                        <strong>@spec.Spec.LocalizedName:</strong> @spec.LocalizedValue
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Fiyatlar</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Mayıs - Ekim:</strong> @Model.MayToOctoberPrice €</p>
                        <p><strong>Haziran:</strong> @Model.JunePrice €</p>
                        <p><strong>Temmuz - Ağustos:</strong> @Model.JulyToAugustPrice €</p>
                        <p><strong>Eylül:</strong> @Model.SeptemberPrice €</p>

                        <small class="text-muted d-block">
                            * Belirtilen fiyatlar <strong>haftalık</strong> kiralama ücretleridir.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Olanaklar</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Facilities != null && Model.Facilities.Any())
                        {
                            <div class="facility-list">
                                @foreach (var facility in Model.Facilities)
                                {
                                    <span class="facility-item d-block mb-1">
                                        <i class="bi bi-check2-circle"></i>
                                        @facility.LocalizedName
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Ekipman bilgisi mevcut değil.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>

<partial name="_SplideScriptsPartial" />
