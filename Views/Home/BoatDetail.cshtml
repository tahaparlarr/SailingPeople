@model BoatDto

@{
    ViewData["Title"] = "Boat Details - New Design";
}

<section class="hero-new-design d-flex align-items-center text-white" style="background-image: url('@Model.Image')">
    <div class="overlay"></div>
    <div class="container text-center">
        <h1 class="display-4">@Model.Code</h1>
        <p class="lead mb-4">
            Are you ready to embark on your dream blue voyage with <strong>@Model.Code</strong>?
        </p>
        <a href="#details-section" class="btn btn-hero">View Details</a>
    </div>
</section>

<section id="details-section" class="details-container py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="image-gallery card shadow-sm">
                    <div class="card-body p-0">
                        <section id="image-carousel" class="splide" aria-label="Boat Images">
                            <div class="splide__track">
                                <ul class="splide__list">
                                    <li class="splide__slide">
                                        <img src="@Model.Image" class="img-fluid" alt="Cover Image" />
                                    </li>
                                    @foreach (var image in Model.BoatImages)
                                    {
                                        <li class="splide__slide">
                                            <img src="@image.Image" class="img-fluid" alt="Boat Image" />
                                        </li>
                                    }
                                </ul>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 mb-4">
                <div class="boat-specs card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex align-items-center">
                        <h5 class="mb-0 flex-grow-1">Boat Specifications</h5>
                        <i class="bi bi-boat fs-5"></i>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Width (Meter):</strong> @Model.Width</li>
                            <li><strong>Length (Meter):</strong> @Model.Length</li>
                            <li><strong>Number of Cabins:</strong> @Model.Cabin</li>
                            <li><strong>Guest Capacity:</strong> @Model.Guest</li>
                        </ul>
                        <hr />
                        <h6 class="text-dark">Technical Specifications</h6>
                        <ul class="list-unstyled mb-0">
                            @foreach (var spec in Model.BoatSpecs)
                            {
                                if (!string.IsNullOrWhiteSpace(spec.LocalizedValue))
                                {
                                    <li>
                                        <strong>@spec.Spec.LocalizedName:</strong> @spec.LocalizedValue
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-6 mb-4">
                <div class="price-info card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex align-items-center">
                        <h5 class="mb-0 flex-grow-1">Price Information</h5>
                        <i class="bi bi-cash-coin fs-5"></i>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered text-center mb-3">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Period</th>
                                    <th scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>May - October</td>
                                    <td>@Model.MayToOctoberPrice €</td>
                                </tr>
                                <tr>
                                    <td>June</td>
                                    <td>@Model.JunePrice €</td>
                                </tr>
                                <tr>
                                    <td>July - August</td>
                                    <td>@Model.JulyToAugustPrice €</td>
                                </tr>
                                <tr>
                                    <td>September</td>
                                    <td>@Model.SeptemberPrice €</td>
                                </tr>
                            </tbody>
                        </table>
                        <small class="text-muted d-block">
                            * The stated prices are the <strong>weekly</strong> charter fees.
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="facilities card shadow-sm">
                    <div class="card-header bg-dark text-white d-flex align-items-center">
                        <h5 class="mb-0 flex-grow-1">Boat Equipment</h5>
                        <i class="bi bi-tools fs-5"></i>
                    </div>
                    <div class="card-body">
                        @if (Model.Facilities != null && Model.Facilities.Any())
                        {
                            <div class="facility-list">
                                @foreach (var facility in Model.Facilities)
                                {
                                    <span class="facility-item">
                                        <i class="bi bi-check2-circle"></i> 
                                        @facility.NameEn
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No equipment information available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark btn-lg">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</section>

<partial name="_SplideScriptsPartial" />
