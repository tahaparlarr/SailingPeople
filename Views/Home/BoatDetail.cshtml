@model BoatDto

@{
    ViewData["Title"] = "Boat Details - " + Model.Code;
}

<section class="hero-new-design d-flex align-items-center text-white" style="background-image: url('@Model.Image')">
    <div class="overlay"></div>
    <div class="container text-center">
        <h1 class="display-4">@Model.Code</h1>
        <p class="lead mb-4">
            Are you ready to embark on a dreamy blue voyage with <strong>@Model.Code</strong>?
        </p>
        <a href="#details-section" class="btn btn-primary">View Details</a>
    </div>
</section>

<div class="container py-4" id="details-section">
    <div class="row justify-content-center">
        <div class="col-lg-8 mb-4">
            <div id="primary-slider" class="splide mb-3" aria-label="Main Boat Images">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide">
                            <img src="@Model.Image" class="img-fluid mx-auto d-block" alt="Cover Image" />
                        </li>
                        @foreach (var image in Model.BoatImages)
                        {
                            <li class="splide__slide">
                                <img src="@image.Image" class="img-fluid mx-auto d-block" alt="Boat Image" />
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="boat-specs-all">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>General Features</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Width (Meters):</strong> @Model.Width</li>
                            <li><strong>Length (Meters):</strong> @Model.Length</li>
                            <li><strong>Number of Cabins:</strong> @Model.Cabin</li>
                            <li><strong>Guest Capacity:</strong> @Model.Guest</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Technical Specifications</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            @foreach (var spec in Model.BoatSpecs)
                            {
                                if (!string.IsNullOrWhiteSpace(spec.LocalizedValue))
                                {
                                    <li>
                                        <strong>@spec.Spec.LocalizedName:</strong> @spec.LocalizedValue
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Prices</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>May - October:</strong> @Model.MayToOctoberPrice €</p>
                        <p><strong>June:</strong> @Model.JunePrice €</p>
                        <p><strong>July - August:</strong> @Model.JulyToAugustPrice €</p>
                        <p><strong>September:</strong> @Model.SeptemberPrice €</p>

                        <small class="text-muted d-block">
                            * The listed prices are the <strong>weekly</strong> charter fees.
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-header f-calvino">
                        <h5>Facilities</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Facilities != null && Model.Facilities.Any())
                        {
                            <div class="facility-list">
                                @foreach (var facility in Model.Facilities)
                                {
                                    <span class="facility-item d-block mb-2">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        @facility.LocalizedName
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No equipment information available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                Back to Home
            </a>
        </div>
    </div>
</div>

<partial name="_SplideScriptsPartial" />
