@model IEnumerable<BoatDto>

@{
	ViewData["Title"] = "Home Page";
}

<section class="custom-header">
	<div class="container-fluid">
		<div class="content-wrap text-center py-5">
			<h1 class="mb-4 display-1 f-calvino">
				<strong>Discover Freedom in the Blue</strong>
			</h1>

			<p class="mb-4 fs-4 f-calvino">
				Embark on an unforgettable sea voyage with comfortable boats and unique routes.
			</p>

			<section class="p-0 m-3 bg-transparent">
				<div class="row justify-content-center">
					<div class="col-md-10 col-lg-8 bg-white rounded-5">
						<div class="p-2">
							<partial name="_FilterFormPartial" />
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</section>

<section>
	<div class="container-fluid p-0">
		<div class="text-center m-4">
			<h5 class="display-6 text-primary fw-bold f-calvino">
				Boats Category
			</h5>
			<p class="text-muted mb-0 f-calvino">
				Explore our collection of amazing boats
			</p>
		</div>

		<div class="row row-cols-1 row-cols-lg-4 g-0">
			@foreach (var category in ViewBag.Categories as IEnumerable<CategoryDto>)
			{
				<div class="col">
					<div class="category-box border shadow-sm overflow-hidden position-relative">

						<div class="category-img position-relative f-calvino">
							<a asp-controller="Home" asp-action="Category" asp-route-id="@category.Id">
								<img class="object-fit-cover w-100" src="~/images/categories/@(category.Id).jpg"
									 alt="@category.LocalizedName" />
							</a>

							<div class="position-absolute start-50 translate-middle-x bottom-0 mb-3" style="z-index: 10;">
								<a asp-controller="Home" asp-action="Category" asp-route-id="@category.Id"
								   class="btn btn-inspect rounded-0 display-7">
									Inspect
								</a>
							</div>

							<div class="category-overlay">
								<div class="overlay-content">
									<h5 class="overlay-title">@category.LocalizedName</h5>
								</div>
							</div>
						</div>

					</div>
				</div>
			}
		</div>
	</div>
</section>
 
<section class="py-5">
	<div class="text-center mb-4">
		<h5 class="display-6 text-primary fw-bold f-calvino">Boats</h5>
			<div class="d-flex justify-content-between align-items-center">
		<p class="text-muted mb-0 f-calvino mx-auto" style="flex-grow: 1; text-align: center;">
			Explore our
			collection of amazing boats
		</p>
		<p class="text-muted mb-0 f-calvino">
			<a asp-controller="Home" asp-action="Boats" class="btn btn-link p-0 me-5 fs-5">
				Show All
			</a>
		</p>
	</div>
	</div>
	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
		 	@foreach (var boat in ViewBag.Boats as IEnumerable<BoatDto>)
			{
				<div class="col">
					<div class="boat-box position-relative shadow-sm border">
						<div class="boat-img position-relative overflow-hidden ">
							<img class="object-fit-cover w-100" src="@boat.Image" alt="@boat.Name" />

							<div class="boat-overlay d-flex flex-column justify-content-center align-items-center">
								<div class="overlay-content">
									<h5 class="overlay-title text-white text-center text-break p-4">@boat.Name</h5>
								</div>
							</div>

							<a asp-controller="Home" asp-action="BoatDetail" asp-route-id="@boat.Id"
							   class="btn btn-inspect position-absolute display-7">
								View Detail
							</a>
						</div>

						<div class="card-footer boat-footer position-relative p-2">
							<div class="boat-info">
								<span class="text-muted d-block text-ellipsis">@boat.Category.LocalizedName</span>
								<a asp-controller="Home" asp-action="BoatDetail" asp-route-id="@boat.Id">
									<span class="fw-bold d-block">@boat.Name</span>
								</a>
								<span class="fw-bold d-block">@boat.Code</span>
							</div>

							<div class="boat-icons position-absolute top-0 end-0 mt-2 me-2 text-nowrap">
								<i class="bi bi-people me-1"></i>@boat.Guest
								<i class="bi bi-door-closed ms-3 me-1"></i>@boat.Cabin
							</div>

							<div class="boat-price mt-4">
								Price start from €@(boat.MayToOctoberPrice) p/week
							</div>
						</div>

					</div>
				</div>
			}

		</div>
	</div>
</section>
