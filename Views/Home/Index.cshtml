@{
	ViewData["Title"] = "Home Page";
}

<section class="custom-header">
	<div class="container-fluid">
		<div class="content-wrap text-center py-5">
			<h1 class="mb-4 display-1 f-calvino">
				<strong>Discover Freedom in the Blue</strong>
			</h1>

			<p class="mb-4 display-7 f-calvino">
				Embark on an unforgettable sea voyage with comfortable boats and unique routes.
			</p>

			<section class="p-0 m-3 bg-transparent">
				<div class="row justify-content-center">
					<div class="col-md-10 col-lg-8 bg-white rounded-5">
						<div class="p-2">
							<partial name="_FilterFormPartial" />
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</section>

<section>
	<div class="container-fluid">
		<div class="text-center m-4">
			<h5 class="display-6 text-primary fw-bold f-calvino">
				Boats Category
			</h5>
			<p class="text-muted mb-0 f-calvino">Explore our collection of amazing boats</p>
		</div>
		<div class="row d-flex flex-wrap">
			@foreach (var category in ViewBag.Categories as IEnumerable<CategoryDto>)
			{
				<div class="col-12 col-md-6 p-0">
					<div class="category-box border shadow-sm overflow-hidden m-2 position-relative">
						<div class="category-img position-relative">
							<a asp-controller="Home" asp-action="Category" asp-route-id="@category.Id">
								<img class="object-fit-cover w-100" src="~/images/categories/@(category.Id).jpg"
									alt="@category.LocalizedName" />
							</a>

							<div class="position-absolute start-50 translate-middle-x bottom-0 mb-3">
								<a asp-controller="Home" asp-action="Category" asp-route-id="@category.Id"
									class="btn item-btn btn-outline-primary display-7">
									Inspect
								</a>
							</div>

							<div class="category-info position-absolute top-0 start-0 bg-white bg-opacity-75 p-2 mt-2">
								<h5 class="m-0 f-calvino">
									<strong>@category.LocalizedName</strong>
								</h5>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

<section class="py-5">
	<div class="text-center mb-4">
		<h5 class="display-6 text-primary fw-bold f-calvino">All Boats</h5>
		<p class="text-muted mb-0 f-calvino">Explore our collection of amazing boats</p>
	</div>
	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
			@foreach (var boat in ViewBag.Boats as IEnumerable<BoatDto>)
			{
				<div class="col">
					<div class="card h-100 custom-card">
						<a asp-controller="Home" asp-action="BoatDetail" asp-route-id="@boat.Id">
							<img src="@boat.Image" class="card-img-top object-fit-cover" alt="@boat.Name">
						</a>
						<div class="card-body">
							<div class="text-muted mb-2">
								<i class="bi bi-people me-1"></i> @boat.Category.LocalizedName
							</div>
							<h5 class="card-title mb-0 f-calvino">@boat.Name</h5>
						</div>
						<div class="card-footer">
							<div class="footer-icons">
								<div>
									<i class="bi bi-door-closed me-1"></i> @boat.Cabin
								</div>
								<div>
									<i class="bi bi-people me-1"></i> @boat.Guest
								</div>
							</div>
							<p class="card-text mb-0">
								<i class="bi bi-rulers me-1"></i>@boat.Width ft x @boat.Length
							</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

