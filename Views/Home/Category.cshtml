@model List<SailingPeople.Domain.Boat>

@{
    ViewData["Title"] = "Category Detail";
}


    <div class="card-container">
        <div class="card">
            <img src="~/images/no-image.jpg" alt="Card Image" class="card-image">
            <div class="card-content">
                <h3 class="card-title">Kart Başlığı</h3>
                <p class="card-description">Bu kartın açıklamasıdır. Burada kartla ilgili daha fazla bilgi bulunabilir.</p>
                <ul class="card-features">
                    <li>Özellik 1</li>
                    <li>Özellik 2</li>
                    <li>Özellik 3</li>
                </ul>
            </div>
        </div>
        <!-- Diğer kartlar buraya eklenebilir -->
    </div>

