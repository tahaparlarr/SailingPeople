@model List<SailingPeople.Domain.Boat>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SealingPeople</title>
	<link rel="shortcut icon" href="~/images/logo.svg">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar fixed-top navbar-expand-lg bg-transparent">
			<div class="container">
				<a class="navbar-brand d-fl justify-content-center align-item-center" asp-controller="Home" asp-action="Index">
					<img src="/images/logo.svg" alt="Logo" height="25">
					Sailing&People
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
						aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarContent">
					<ul class="navbar-nav mx-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Index">@SharedResources.Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Contact">@SharedResources.Contact</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main role="main">
		@RenderBody()
	</main>

	<section>
		<footer class="footer">
			<div class="container py-5">
				<div class="row justify-content-evenly">
					<div class="col-12 col-md-3 mb-4">
						<h5>Boat Categories</h5>
						<ul class="list-unstyled text-left">
							@* 							@foreach (var category in ViewBag.Categories as IEnumerable<CategoryDto>)
							{
								<li>
									<a asp-controller="Home" asp-action="Category" asp-route-id="@category.Id">
										<i class="bi bi-boats"></i> @category.LocalizedName
									</a>
								</li>
							} *@
						</ul>
					</div>

					<div class="col-12 col-md-3 mb-4">
						<h5>Follow Us</h5>
						<ul class="list-unstyled text-left">
							<li><a href="#"><i class="bi bi-facebook"></i> Facebook</a></li>
							<li><a href="#"><i class="bi bi-twitter"></i> Twitter</a></li>
							<li><a href="#"><i class="bi bi-instagram"></i> Instagram</a></li>
							<li><a href="#"><i class="bi bi-linkedin"></i> LinkedIn</a></li>
							<li><a href="#"><i class="bi bi-youtube"></i> YouTube</a></li>
						</ul>
					</div>

					<div class="col-12 col-md-3 mb-4">
						<h5>Contact Information</h5>
						<ul class="list-unstyled text-left">
							<li>
								<i class="bi bi-telephone"></i> Phone: 0530 090 79 98
							</li>
							<li>
								<i class="bi bi-envelope"></i> Email: info@sailingandpeople.com
							</li>
						</ul>
					</div>

					<div class="col-12 col-md-3 mb-4">
						<h5>Pages</h5>
						<ul class="list-unstyled text-left">
							<li><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> @SharedResources.Home</a></li>
							<li><a asp-controller="Home" asp-action="Contact"><i class="bi bi-envelope"></i> @SharedResources.Contact</a></li>
							<li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
						</ul>
					</div>
				</div>

				<div class="row">
					<div class="col-12 text-center mt-4">
						<p>Copyright © 2025 CMOS Teknoloji</p>
					</div>
				</div>
			</div>
		</footer>
	</section>



	<script type="importmap"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>