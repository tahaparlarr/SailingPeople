<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SealingPeople</title>
    <script type="importmap"></script>
    <link rel="shortcut icon" href="~/images/logo.svg">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/">
    <link rel="stylesheet" href="~/socicon/css/styles.css" />
    <link rel="stylesheet" href="~/theme/css/style.css" />
    <link rel="stylesheet" href="~/mobirise/css/mbr-additional.css?v=4O7dB3" type="text/css" />
</head>

<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg bg-transparent">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.svg" alt="Logo" height="30">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@SharedResources.Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">@SharedResources.Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <section>
        <footer class="custom-footer text-center text-lg-start">
            <div class="container py-4">
                <div class="row">
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <h5 class="text-uppercase fw-bold mb-3">Sosyal Medya</h5>
                        <a href="#" class="me-3">
                            <i class="bi bi-facebook fs-4"></i>
                        </a>
                        <a href="#" class="me-3">
                            <i class="bi bi-twitter fs-4"></i>
                        </a>
                        <a href="#" class="me-3">
                            <i class="bi bi-instagram fs-4"></i>
                        </a>
                        <a href="#">
                            <i class="bi bi-linkedin fs-4"></i>
                        </a>
                    </div>

                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <h5 class="text-uppercase fw-bold mb-3">İletişim</h5>
                        <p class="mb-1">
                            <i class="bi bi-telephone-fill me-2"></i> +90 555 555 55 55
                        </p>
                        <p class="mb-1">
                            <i class="bi bi-envelope-fill me-2"></i> info@ornek.com
                        </p>
                        <p>
                            <i class="bi bi-geo-alt-fill me-2"></i> 123 Sokak, Şehir, Ülke
                        </p>
                    </div>

                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <h5 class="text-uppercase fw-bold mb-3">Sayfalar</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a asp-controller="Home" asp-action="Index">@SharedResources.Home</a>
                            </li>
                            <li class="mb-2">
                                <a asp-controller="Home" asp-action="Contact">@SharedResources.Contact</a>
                            </li>
                            <li>
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="text-center p-3">
                &copy; 2025 Örnek Şirket - Tüm Hakları Saklıdır
            </div>
        </footer>

    </section>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>