<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="icon" href="~/images/logo.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        @await Component.InvokeAsync("Navbar")
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <section class="footer-section bg-light py-5">
        <footer class="footer">
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <div class="col">
                        <div class="footer-card h-100">
                            <h4 class="footer-title mb-4 f-calvino">@SharedResources.FollowUs</h4>
                            <ul class="list-unstyled social-links">
                                <li class="mb-3">
                                    <a href="https://www.facebook.com/sailingandpeoplecom/" target="_blank" class="social-link">
                                        <i class="bi bi-facebook me-2"></i> Facebook
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="https://twitter.com/sailing_people/" target="_blank" class="social-link">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter-x me-2" viewBox="0 0 16 16">
                                            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
                                        </svg>
                                        <span>Twitter / X</span>
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="https://www.instagram.com/sailingandpeople/" target="_blank" class="social-link">
                                        <i class="bi bi-instagram me-2"></i> Instagram
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="https://www.linkedin.com/company/sailing-and-people/" target="_blank" class="social-link">
                                        <i class="bi bi-linkedin me-2"></i> LinkedIn
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.youtube.com/channel/UC_LQt8r6LuEUj3a6KBKqXaQ" target="_blank" class="social-link">
                                        <i class="bi bi-youtube me-2"></i> YouTube
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col">
                        <div class="footer-card h-100">
                            <h4 class="footer-title mb-4 f-calvino">@SharedResources.ContactInformation</h4>
                            <ul class="list-unstyled contact-info">
                                <li class="mb-3">
                                    <a href="mailto:alioguducu@gmail.com" class="contact-link">
                                        <i class="bi bi-envelope-fill me-2"></i> alioguducu@gmail.com
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col">
                        <div class="footer-card h-100">
                            <h4 class="footer-title mb-4 f-calvino">@SharedResources.Pages</h4>
                            <ul class="list-unstyled quick-links">
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Index" class="quick-link">
                                        <i class="bi bi-house-door me-2"></i> @SharedResources.Home
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Contact" class="quick-link">
                                        <i class="bi bi-headset me-2"></i> @SharedResources.Contact
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Contact" class="quick-link">
                                        <i class="bi bi-question-circle me-2"></i> @SharedResources.Faq
                                    </a>
                                </li>
                                @await Component.InvokeAsync("CategoryList")
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row py-4">
                    <div class="col-12">
                        <div class="copyright text-center pt-3 border-top">
                            <p class="mb-0">
                                <small>
                                    Sailing & People is a SIESTA YATCILIK A.Ş. brand.<br>
                                    © 2025 CMOS @SharedResources.Technology. All rights reserved.
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </section>

    <script type="importmap"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>