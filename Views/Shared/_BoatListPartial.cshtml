@model BoatDto

<section class="py-5">
	<div class="text-center mb-4">
		<h5 class="display-6 text-primary fw-bold f-calvino">All Boats</h5>
		<p class="text-muted mb-0 f-calvino">Explore our collection of amazing boats</p>
	</div>
	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
			@foreach (var boat in ViewBag.Boats as IEnumerable<BoatDto>)
			{
				<div class="col">
					<div class="boat-box border shadow-sm overflow-hidden position-relative">

						<div class="boat-img position-relative f-calvino">
							<a asp-controller="Home" asp-action="BoatDetail" asp-route-id="@boat.Id">
								<img class="object-fit-cover w-100" src="@boat.Image" alt="@boat.Name" />
							</a>

							<div class="boat-overlay">
								<div class="overlay-content">
									<h5 class="overlay-title">@boat.Name</h5>
								</div>
							</div>

							<div class="position-absolute start-50 translate-middle-x bottom-0 mb-3" style="z-index: 10;">
								<a asp-controller="Home" asp-action="BoatDetail" asp-route-id="@boat.Id"
									class="btn btn-inspect rounded-0 display-7">
									More Info
								</a>
							</div>
						</div>

						<div class="p-3">
							<div class="text-muted mb-2">
								<i class="bi bi-people me-1"></i> @boat.Category.LocalizedName
							</div>
							<div class="d-flex justify-content-between align-items-center mb-2">
								<span><i class="bi bi-door-closed me-1"></i> @boat.Cabin</span>
								<span><i class="bi bi-people me-1"></i> @boat.Guest</span>
							</div>
							<p class="mb-0">
								<i class="bi bi-rulers me-1"></i>@boat.Width ft x @boat.Length
							</p>
						</div>

					</div>
				</div>
			}
		</div>
	</div>
</section>
