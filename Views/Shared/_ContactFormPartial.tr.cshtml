@model SailingPeople.Models.ContactViewModel

<div class="contact-form-container">
    <h3 class="contact-form-title">Bize Ulaşın</h3>

    @if (ViewBag.Message != null)
    {
        <div class="alert @(ViewBag.IsSuccess == true ? "alert-success" : "alert-danger") fade show">
            @ViewBag.Message
        </div>
    }

    <div class="contact-form-wrapper">
        <form asp-action="Message" method="post" class="contact-form">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Adınız</label>
                <input asp-for="Name" class="form-control" placeholder="Adınız" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" placeholder="E-posta Adresiniz" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject" class="form-label">Konu</label>
                <input asp-for="Subject" class="form-control" placeholder="Konu" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="form-label">Mesaj</label>
                <textarea asp-for="Message" class="form-control" rows="4" placeholder="Mesajınız..."></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary contact-form-button">Gönder</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}